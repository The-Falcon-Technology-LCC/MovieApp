<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - MovieApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/MovieApp.Web.styles.css" asp-append-version="true"/>
    <link rel="icon" href="~/favicon.png" />
</head>
<body style="background: rgb(187,187,187);
background: linear-gradient(180deg, rgba(187,187,187,1) 0%, rgba(210,210,210,1) 35%, rgba(255,255,255,1) 100%);">
<header style="background-color: #1E122C;">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="fas fa-film"></i>
                MovieApp
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1 justify-content-end">
                    <li class="nav-item navbar-hover">
                        <a class="nav-link text-light" asp-area="" asp-controller="Movie" asp-action="Index">
                            <i class="fas fa-video"></i>
                            Movies
                        </a>
                    </li>
                    <li class="nav-item navbar-hover">
                        <a class="nav-link text-light" asp-area="" asp-controller="Director" asp-action="Index">
                            <i class="fas fa-person"></i>
                            Directors
                        </a>
                    </li>
                    <li class="nav-item navbar-hover">
                        <a class="nav-link text-light" asp-area="" asp-controller="Genre" asp-action="Index">
                            <i class="fas fa-folder"></i>
                            Genres
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted" style="background-color: #1E122C;">
    <div class="container ms-0" style="color:white; width: 10vw;">
        <img src="/Falcon_logo_white.png" alt="falcon logo" style="width: 100px !important;" />
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
