@model Director

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <label asp-for="FirstName" class="control-label pt-2">First name</label>
    <input asp-for="FirstName" class="form-control" />
    <span asp-validation-for="FirstName" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="LastName" class="control-label pt-2">Last name</label>
    <input asp-for="LastName" class="form-control" />
    <span asp-validation-for="LastName" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="DOB" class="control-label pt-2">Date of birth</label>
    <input asp-for="DOB" class="form-control" type="date"/>
    <span asp-validation-for="DOB" class="text-danger"></span>
</div>
<div class="form-group" style="margin-top: 20px;">
    <input type="submit" value="Save" class="btn" style="margin-left: 0.5vw; background-color: #4292cf; border-color: #83c0e9; color: white"/>
</div>