@model IEnumerable<MovieResult>

@{
    ViewData["Title"] = "Movie list";
}

<div class="row pt-5">
    <div class="col-xl-10">
        <h3>Movie list</h3>
        <div style="border-bottom: 10px solid #1E122C; margin-left: 1vw; width: 4vw;"></div>
    </div>
    <div class="col-xl-2">
        <a asp-action="Create" class="btn btn-success float-right" style="background-color: #3d2b52; border-color: #3d2b52;">Add movie</a>
    </div>
</div>


<nav aria-label="breadcrumb" class="pt-3">
    <ol class="breadcrumb ps-3">
        <li class="breadcrumb-item active" aria-current="page">Movie list</li>
    </ol>
</nav>

<table style="margin-top: 20px;" class="table table-condensed" id="movieTable">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Director</th>
            <th>Genres</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.Director</td>
                <td>@item.Genres</td>
                <td class="d-flex justify-content-end">
                    <a type="submit" asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">
                        Details
                    </a>
                    <a type="submit" asp-action="Edit" asp-route-id="@item.Id" class="btn " style="margin-left: 0.5vw; background-color: #4292cf; border-color: #83c0e9; color: white">
                        Edit
                    </a>
                    <form method="post">
                        <button asp-action="Delete" asp-route-id="@item.Id" type="submit" class="btn" style="margin-left: 0.5vw; background-color: #ee3435; border-color: #f05455; color: white ">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>