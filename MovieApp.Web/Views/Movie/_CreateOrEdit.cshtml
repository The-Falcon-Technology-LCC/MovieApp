@model MovieRequest

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<div class="form-group col-xl-3">
    <label asp-for="Title" class="control-label pt-2"></label>
    <input asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
</div>

<div class="form-group col-xl-3">
    <label class="control-label pt-2">Director</label>
    <select asp-for="DirectorId" asp-items="ViewBag.DirectorList" class="form-control"></select>
    <span asp-validation-for="DirectorId" class="text-danger"></span>
</div>

<div class="form-group col-xl-3">
    <label class="control-label pt-2">Genre</label>
    <select asp-for="GenreId" asp-items="ViewBag.GenreList"  multiple class="form-control">
    </select>
    <span asp-validation-for="GenreId" class="text-danger"></span>
</div>

<div class="form-group col-xl-6">
    <label asp-for="Description" class="control-label pt-2"></label>
    <textarea asp-for="Description" class="form-control" style="height: 15vh;"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>

<div class="form-group" style="margin-top: 20px;">
    <input type="submit" value="Save" class="btn" style="margin-left: 0.5vw; background-color: #4292cf; border-color: #83c0e9; color: white"/>
</div>